<tiles-definitions>
  <definition name="view" template="/layout/Main.jsp">
    <put-attribute name="title" value="View Content" />
    <put-attribute name="header" value="/layout/Header.jsp" />
    <put-attribute name="body" value="/view/ViewContent.jsp" />
    <put-attribute name="leftmenu" value="/layout/LeftMenu.jsp" />
  </definition>
  
  <!-- Add page -->
  <definition name="add" extends="view">
    <put-attribute name="title" value="Add Content" />
    <put-attribute name="body" value="/view/" />
